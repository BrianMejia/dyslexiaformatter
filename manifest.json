{
  "name": "Dyslexia Formatter",
  "description": "WIP Extension that will make browsing the internet easier for dyslexic people.",
  "version": "0.1",
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "storage"
  ],
  "browser_action": {
      "default_title": "Dyslexia Formatter. ~ to Activate/Deactivate.",
      "default_icon": {
          "16": "icon_16.png"
      }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["core.css"],
      "js": ["jquery-3.1.1.min.js", "core.js", "options.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "manifest_version": 2
}
